generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Subscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  restaurantId String     @db.ObjectId
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

model Reservations {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  time      String
  guests    Int
  status    String
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // User relations
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  // Restaurant relations
  restaurantId String     @db.ObjectId
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

model Menu {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  url   String
  title String

  // Relations
  restaurantId String     @db.ObjectId
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

model Restaurant {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  email       String  @unique
  name        String
  password    String
  cnpj        String
  fullAddress String
  phone       String
  mapsUrl     String?
  description String?

  // Relations
  reservations  Reservations[]
  subscriptions Subscription[]
  menu          Menu[]
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String
  password String
  phone    String?

  // Relations
  reservations Reservations[]
}
